                "order",
                "sum"
            ],
            "properties": {
                "order": {
                    "description": "Order number for withdrawal\nRequired: true",
                    "type": "string"
                },
                "sum": {
                    "description": "Amount to withdraw\nRequired: true",
                    "type": "number",
                    "minimum": 0
                }
            }
        },
        "github_com_dtroode_gophermart_internal_application_response.UserBalance": {
            "type": "object",
            "properties": {
                "current": {
                    "type": "number"
                },
                "withdrawn": {
                    "type": "integer"
                }
            }
        },
        "github_com_dtroode_gophermart_internal_application_response.UserOrder": {
            "type": "object",
            "properties": {
                "accrual": {
                    "type": "integer"
                },
                "number": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "uploaded_at": {
                    "type": "string"
                }
            }
        },
        "github_com_dtroode_gophermart_internal_application_response.UserWithdrawal": {
            "type": "object",
            "properties": {
                "order": {
                    "type": "string"
                },
                "processed_at": {
                    "type": "string"
                },
                "sum": {
                    "type": "integer"
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}