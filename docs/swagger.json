                "login",
                "password"
            ],
            "properties": {
                "login": {
                    "description": "User login\nRequired: true",
                    "type": "string"
                },
                "password": {
                    "description": "User password\nRequired: true",
                    "type": "string"
                }
            }
        },
        "github_com_dtroode_gophermart_internal_api_http_request.RegisterUser": {
            "type": "object",
            "required": [
                "login",
                "password"
            ],
            "properties": {
                "login": {
                    "description": "User login\nRequired: true",
                    "type": "string"
                },
                "password": {
                    "description": "User password\nRequired: true",
                    "type": "string"
                }
            }
        },
        "github_com_dtroode_gophermart_internal_api_http_request.WithdrawBonuses": {
            "type": "object",
